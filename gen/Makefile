# Generate C header and SystemVerilog files

REGTOOL = regtool.py

SRCS = mailbox_reg_top.sv mailbox_reg_pkg.sv

#all: srcs headers
all: srcs

srcs: $(SRCS)


mailbox_reg_top.sv: mailbox.hjson
	$(REGTOOL) -r $< -t .

headers: mailbox.h

mailbox.h: mailbox.hjson
	$(REGTOOL) --cdefines $< > $@

.PHONY: install
install:
	cp $(SRCS) ../rtl

.PHONY: clean
clean:
	rm $(SRCS)
